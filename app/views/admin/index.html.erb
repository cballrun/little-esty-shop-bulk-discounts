<h1> Admin Dashboard </h1>

<section id = "favorite_customers" >
<h2> Top 5 Customers Overall </h2>

<% @top_5_customers.each do |cust| %>
  <li id ="cust_<%=cust.id%>" > <%= cust.first_name %> <%= cust.last_name %>, Purchase Count: <%= cust.transac_count %> </li>
<% end %>
</section>


<section id = "incomplete_invoices" >
<h2> Incomplete Invoices </h2>

<% @incomplete_invoices.each do |inv| %>
 <li id ="inc_inv_<%=inv.id%>" > Invoice ID: <%= inv.id %> Invoice Date: <%= inv.created_at.strftime("%A, %B %d, %Y") %> </li>

<% end %>
</section>

<%= link_to "Merchant Index", admin_merchants_path %>
<%= link_to "Invoice Index", admin_invoices_path  %> 